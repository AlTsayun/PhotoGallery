                <!--                 VerticalContentAlignment="Center" -->
                <!--         > -->
                <!--             ↺ -->
                <!--         </Button> -->
                <!--     </Grid> -->
                <!-- </GroupBox> -->
                <GroupBox Grid.Row="4" Header="Brightness" BorderThickness="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Name="changeBrightnessSlider" 
                                VerticalAlignment="Center"
                                Minimum="-180" 
                                Maximum="+180" 
                                SelectionStart="0"
                        ></Slider>
                        <Button Grid.Column="1" 
                                Width="20" 
                                FontSize="18" 
                                VerticalContentAlignment="Center"
                                Click="resetBrightness"
                            >
                            ↺
                        </Button>
                    </Grid>
                </GroupBox>
                
                <GroupBox Grid.Row="5" Header="Contrast" BorderThickness="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Name="changeContrastSlider" 
                                VerticalAlignment="Center"
                                Minimum="-180" 
                                Maximum="+180" 
                                SelectionStart="0"
                        ></Slider>
                        <Button Grid.Column="1" 
                                Width="20" 
                                FontSize="18" 
                                VerticalContentAlignment="Center"
                                Click="resetContrast"
                        >
                            ↺
                        </Button>
                    </Grid>
                </GroupBox>
                
                <GroupBox Grid.Row="6" Header="Scale" BorderThickness="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Name="changeScaleSlider" 
                                VerticalAlignment="Center"
                                Minimum="-180" 
                                Maximum="+180" 
                                SelectionStart="0"
                        ></Slider>
                        <Button Grid.Column="1" 
                                Width="20" 
                                FontSize="18" 
                                VerticalContentAlignment="Center"
                                Click="resetScale"
                        >
                            ↺
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="7" Header="Drawing" BorderThickness="0" >
                    <Grid>
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0">Pencil ✎</Button>
                        <Button Grid.Column="1">Eraser ✐</Button>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
